<h1>Anmelden</h1>
<%= form_for(:session, :url => sessions_path) do |f| %>
  <div class="field">
    <%= f.label  :email %><br/>
    <%= f.text_field :email  %>
  </div>
  <div class="field">
    <%= f.label :password %><br/>
    <%= f.password_field :password %>
  </div>
  <div class="actions">
    <%= f.submit "Anmelden" %>
  </div>
<% end %>
<p>
  Neu hier? <%= link_to " Jetzt Registrieren!", signup_path %>
</p>
