<header>
  <%= link_to logo, root_path %>
  <nav class="round">
    <ul>
      <li><%= link_to "Start", root_path %></li>
      <% if signed_in? %>
        <li><%= link_to "Profil", current_user %></li>
      <% end %>
      <li><%= link_to "Hilfe", help_path %></li>
      <% if signed_in? %>
        <li><%= link_to "Abmelden", signout_path, :method => :delete %></li>
      <% else %>
        <li><%= link_to "Anmelden", signin_path, :method => :create %></li>
      <% end %>
    </ul>
  </nav>
</header>
